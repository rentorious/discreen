{
  "name": "discreen",
  "version": "1.0.0",
  "description": "Cross-platform screen recorder app",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer && npm run copy-assets",
    "build:main": "tsc",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "copy-assets": "shx mkdir -p dist/renderer && shx cp src/renderer/index.html dist/renderer/ && shx cp src/renderer/styles.css dist/renderer/",
    "start": "npm run build && electron .",
    "dev": "tsc --watch & electron .",
    "package": "electron-builder",
    "package:win": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "package:mac": "electron-builder --mac"
  },
  "keywords": [
    "screen-recorder",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.10.0",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "shx": "^0.4.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.2"
  },
  "build": {
    "appId": "com.discreen.app",
    "productName": "Discreen",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    }
  }
}
